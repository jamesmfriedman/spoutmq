{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "lib",
    "baseUrl": "./",
    "preserveWatchOutput": true,
    "paths": {
      "@common/*": ["src/common/*"],
      "@controller/*": ["src/controller/*"],
      "@model": ["src/model"],
      "@model/*": ["src/model/*"]
    },
    "lib": ["esnext"]
  },
  "include": ["src/**/*"]
}
